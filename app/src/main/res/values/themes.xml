<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pdf" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/dark_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen Style -->
    <style name="splashTextView">
        <item name="android:text">@string/scanner</item>
        <item name="android:layout_marginTop">402dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:shadowColor">@color/dark_blue</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
    </style>
    <style name="splashActivity">
        <item name="android:background">@color/white</item>
        <item name="android:strokeColor">@color/dark_blue</item>
    </style>
    <style name="splashIcon">
        <item name="android:layout_marginTop">310dp</item>
        <item name="android:src">@drawable/icon</item>
    </style>
    <style name="splashrectange1">
        <item name="android:layout_marginStart">240dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:src">@drawable/rectangle1</item>
    </style>
    <style name="splashrectange2">
        <item name="android:layout_marginStart">228dp</item>
        <item name="android:layout_marginTop">228dp</item>
        <item name="android:src">@drawable/rectangle2</item>
    </style>

    <!-- Request Permission Style -->
    <style name="iconView">
        <item name="android:layout_marginTop">98dp</item>
        <item name="android:src">@drawable/icon1</item>
    </style>
    <style name="textView1">
        <item name="android:text">@string/permission</item>
        <item name="android:layout_marginStart">43dp</item>
        <item name="android:layout_marginTop">380dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fillColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textView2">
        <item name="android:text">@string/request</item>
        <item name="android:layout_marginStart">43dp</item>
        <item name="android:layout_marginTop">420dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fillColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/light_black</item>

    </style>
    <style name="allowBtn">
        <item name="android:layout_marginTop">642dp</item>
        <item name="background">@drawable/btn_bg</item>
        <item name="android:text">@string/allow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableRight">@drawable/arrow</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!-- Item Views(Pdf,Word,Excel,PPT) -->
    <style name="itemView">
        <item name="android:padding">10dp</item>
        <item name="elevation">5dp</item>
    </style>
    <style name="itemName">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="itemDate">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="itemSize">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- Bottom Sheet View -->
    <style name="textView3">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:text">@string/tools</item>

    </style>
    <style name="importImages">
        <item name="android:layout_marginTop">87dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="importImagesTextView">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">44dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:text">@string/images</item>
    </style>

    <style name="scanDocumentTextView">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">44dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:text">@string/documents</item>
    </style>

    <style name="textExtractor">
        <item name="android:layout_marginTop">140dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="textExtractorTextView">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">44dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:text">@string/extract</item>
    </style>
    <style name="signPdfTextView">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">44dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:text">@string/sign</item>
    </style>

    <style name="textPdf">
        <item name="android:layout_marginTop">193dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="textPdfTextView">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">44dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:text">@string/textpdf</item>
    </style>
    <style name="barCodeScanTextView">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">44dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:text">@string/barcode</item>
    </style>

    <!-- Import Images From Gallery (Images to Pdf) -->
    <style name="galleryImagesRecyclerView">
        <item name="android:layout_weight">1</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="android:verticalSpacing">8dp</item>
        <item name="android:horizontalSpacing">8dp</item>
        <item name="spanCount">3</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="selectedImagesRecyclerView">
        <item name="android:layout_weight">1</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:verticalSpacing">8dp</item>
        <item name="android:horizontalSpacing">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="generatePdfBtn">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/generatepdf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- Images Item (Recycler View) (Import Images) -->
    <style name="imageView1">
        <item name="android:background">@drawable/img_bg</item>
        <item name="android:elevation">50dp</item>
        <item name="elevation">50dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="imageView">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="radioBtn">
        <item name="backgroundTint">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Scan Documents -->


</resources>